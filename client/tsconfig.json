{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "ES6",
    "module": "ESNext",
    "outDir": "/dist/",
    "moduleResolution": "Node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@assets/*": ["assets/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}